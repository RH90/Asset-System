html
	head
		title!=title
		style
			include styles.css
		script
			include script.js
		script(src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js")
	body
		div(id="overlay")
			div(id="iframeContainer",style="background:white;width:80%;height:80vh;top:25px;position:absolute;left:10%")
				button(style="right:0px;position:absolute",onclick="overlayOff()")!="X"
		span(id="sideNavButton",style="position:fixed;background:darkblue;font-size:20px;cursor:pointer",onclick="openNav()")!="&#9776; open"
		div(id="mySidenav",class="sidenav")
			a(href="javascript:void(0)",class="closebtn",onclick="closeNav()")!="&times;"
			a(href="/pupil")!="Elever"
			a(href="#")!="Personal"
			a(href="/skap")!="Skåp"
			a(href="#")!="Historia"
			a(href="#")!="Datorer"
			a(href="#")!="Platser"
			a(href="#")!="Misc"
			a(href="/logout")!="Logout"
		div(style="background:violet;")
			h1(style="margin:0")=(row.firstname+" "+row.lastname)
		CENTER
			div(style="display:inline-block")
				div(style="display: flex;")
					form(action="/pupil/" + row.id,method="POST")
						table(style="width:auto;margin-right:10px")
							tr
								td!="Förnamn"
								td
									input(type="text", name="firstname",value=(row.firstname))
							tr
								td!="Efternamn"
								td
									input(type="text", name="lastname",value=(row.lastname))
							tr
								td!="Årskurs"
								td
									input(type="text", name="grade",value=(row.grade))
							tr
								td!="Klass"
								td
									input(type="text", name="classP",value=(row.classP))
							tr
								td!="År"
								td!=(row.year)
							tr
								td!="Skåp"
								td
									a(href="/skap/"+row.number)!=row.number
							tr
								td
								td
									button(type="submit")!="Spara"
					table(style="width:auto;margin-right:10px")
						tr
							td!="Datorer och tillbehör"
						tr
							td!="Typ"
							td!="Serienummer"
					table(style="width:auto")
						form(action="/pupil/" + row.id ,method="POST")
							tr
								td
									textarea(rows="3",cols="40",name="comment")
								td
									button(type="submit")!="Lägg till commentar"
						tr
							td!="Comment"
							td!="Date"
						each val in history
							tr
								td(style="white-space:pre")!=val.comment
								td!=val.date