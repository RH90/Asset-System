html
	head
		title!=title
		style
			include styles.css
		script(type="text/javascript")
			include script.js
		script(type="text/javascript")
			include sorttable.js
	body
		include head.pug
		CENTER
			div(style="display:inline-block")
				div(style="display: flex;")
					form(action="/inventory/" + row.id,method="POST")
						table(style="width:auto;margin-right:10px")
							tr
								td!="Typ"
								td!=row.type
							tr
								td!="Brand"
								td!=row.brand
							tr
								td!="Model"
								td!=row.model
							tr
								td!="Serial"
								td!=row.serial
							tr
								td!="Comment"
								td!=row.comment
							tr
								td!="Status"
								td
									select(name="status")
										option(value="0",selected=statusSelected[0])!="Klar at ge ut"
										option(value="1",selected=statusSelected[1])!="Sönder"
										option(value="2",selected=statusSelected[2])!="Repareras"
							tr
								td!="Owner"
								td
									a(href=row.link)!=row.owner
							tr
								td
								td
									button(type="submit")!="Spara"
					include historyTable
					table(style="width:auto;margin-right:10px")
						td
							if row.owner
								button!="Ta bort från ägare"
							else
								button!="Ge Till"