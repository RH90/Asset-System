html
	head
		title!=title
		style
			include styles.css
		script
			include script.js
		script(src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js")
	body
		div(id="overlay")
			div(id="iframeContainer",style="background:white;width:80%;height:80vh;top:25px;position:absolute;left:10%")
				button(style="right:0px;position:absolute",onclick="overlayOff()")!="X"
		span(id="sideNavButton",style="position:fixed;background:lightblue;font-size:20px;cursor:pointer",onclick="openNav()")!="&#9776;"
		div(id="mySidenav",class="sidenav")
			a(href="javascript:void(0)",class="closebtn",onclick="closeNav()")!="&times;"
			a(href="/pupil")!="Elever"
			a(href="#")!="Personal"
			a(href="/skap")!="Skåp"
			a(href="#")!="Historia"
			a(href="#")!="Datorer"
			a(href="#")!="Platser"
			a(href="#")!="Misc"
			a(href="/logout")!="Logout"
		div(style="background:violet;")
			h1(style="margin:0")=row.number
		CENTER
			div(style="display:inline-block")
				div(style="display: flex;")
					form(action="/skap/" + row.number,method="POST")
						table(style="width:auto;margin-right:10px")
							tr
								td!="Skåp"
								td!=row.number
							tr
								td!="Nycklar"
								td
									input(type="number", name="keys",value=row.keys)
							tr
								td!="Status"
								td
									select(name="status")
										option(value="0",selected=statusSelected[0])!="Elev har skåp"
										option(value="1",selected=statusSelected[1])!="Låst av skolan"
										option(value="2",selected=statusSelected[2])!="Elev med eget lås"
										option(value="3",selected=statusSelected[3])!="Skåp repareras"
										option(value="4",selected=statusSelected[4])!="Multilås"
										option(value="5",selected=statusSelected[5])!="Elev Med d. skåp"
										option(value="6",selected=statusSelected[6])!="Andvänds ej"
										option(value="7",selected=statusSelected[7])!="Utan nyckel elev innehåll"
							tr
								td!="Plan"
								td!=row.floor
							tr
								td!="Ägare"
								td
									a(href= (row.firstname)? ("/pupil/"+row.owner_id): false )!=(row.firstname) ? (row.firstname+" "+row.lastname+", "+row.grade+row.classP) : row.owner_id+""
							tr
								td
								td
									button(type="submit")!="Spara"
					table(style="width:auto")
						form(action="/skap/" + message,method="POST")
							tr
								td
									textarea(rows="3",cols="40",name="comment")
								td
									button(type="submit")!="Lägg till commentar"
						tr
							td!="Comment"
							td!="Date"
						each val in history
							tr
								td(style="white-space:pre")!=val.comment
								td!=val.date