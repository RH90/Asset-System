History
CREATE TABLE "history" (
	"id"	INTEGER,
	"owner_table"	INTEGER DEFAULT -1,
	"owner_id"	INTEGER DEFAULT -1,
	"type"	TEXT,
	"comment"	TEXT,
	"date"	INTEGER DEFAULT 0,
	PRIMARY KEY("id" AUTOINCREMENT)
)

owner_table:
   -1:General
    0:Pupil
    1:Locker
	2:Inventory
    3:Place
    4:Personel